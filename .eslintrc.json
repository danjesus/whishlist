{
    "parser": "babel-eslint",
    "extends": "airbnb/base",
    "plugins": [
        "standard"
    ],
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "semi": 2,
        "import/no-extraneous-dependencies": [
            "error", {
                "devDependencies": true
            }]
    },
    "globals": {
        "describe": true,
        "it": true,
        "expect": true,
        "app": true,
        "beforeEach": true,
        "request": true,
        "assert": true,
        "before": true,
        "afterEach": true
    }
}
